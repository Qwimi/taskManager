<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical"
    style="@style/layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_xl"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/project_list"
            android:textColor="@color/primary" />

        <LinearLayout
            android:id="@+id/new_project"
            android:layout_width="@dimen/space_3xl"
            android:layout_height="@dimen/space_3xl"
            android:background="@drawable/primary_button_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/space_xxl"
                android:layout_height="@dimen/space_xxl"
                android:src="@drawable/add_ucon" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/project_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>